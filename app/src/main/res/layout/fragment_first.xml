<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">


    <include
        android:id="@+id/cardView5"
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:backgroundTint="@color/teal_1"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView5">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:autoSizePresetSizes="@array/autosize_text_sizes_1"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/comic"
                android:text="@string/money"
                android:textColor="@color/white"
                android:textSize="20sp">

            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:autoSizePresetSizes="@array/autosize_text_sizes_regular"
                android:autoSizeTextType="uniform"
                android:elevation="10dp"
                android:fontFamily="@font/comic"
                android:text="@string/money_val"

                android:textColor="@color/white"
                android:textSize="25sp">

            </com.google.android.material.textview.MaterialTextView>
        </RelativeLayout>
        <ImageButton
            android:id="@+id/changeMoney"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_margin="17dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_baseline_add_circle_outline_24"
            android:backgroundTint="@color/blue"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="10dp"
            android:cropToPadding="false"
            app:srcCompat="@drawable/cat1">

        </ImageView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:backgroundTint="@color/blue"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:autoSizePresetSizes="@array/autosize_text_sizes_1"
                android:autoSizeTextType="uniform"
                android:elevation="10dp"
                android:fontFamily="@font/comic"
                android:text="@string/expense"
                android:textColor="@color/white"
                android:textSize="20sp">

            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textMoney1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:autoSizePresetSizes="@array/autosize_text_sizes_regular"
                android:autoSizeTextType="uniform"
                android:elevation="10dp"
                android:fontFamily="@font/comic"
                android:text="@string/money_val"
                android:textColor="@color/white"
                android:textSize="25sp">

            </com.google.android.material.textview.MaterialTextView>

        </RelativeLayout>
        <ImageButton
            android:id="@+id/usedMoney"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_margin="17dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_baseline_money_off_24"
            android:foreground="?android:attr/selectableItemBackground"
            android:backgroundTint="@color/teal_1"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:cropToPadding="false"
            app:srcCompat="@drawable/cat2">

        </ImageView>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView6"
        app:layout_constraintVertical_bias="1.0">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/orangeee"
            android:src="@drawable/ic_baseline_home_24"
            app:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:maxImageSize="35dp" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/orange"
            android:src="@drawable/ic_baseline_attach_money_24"
            android:textAlignment="center"
            app:elevation="2dp"
            app:fabCustomSize="40dp"
            app:hoveredFocusedTranslationZ="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_first"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:maxImageSize="25dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/orange"
            android:src="@drawable/ic_baseline_receipt_24"
            app:borderWidth="0dp"
            app:elevation="2dp"
            app:fabCustomSize="40dp"
            app:hoveredFocusedTranslationZ="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/button_first"
            app:maxImageSize="25dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:backgroundTint="@color/ngoc1"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <CalendarView
                android:id="@+id/calendar_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="60dp"
                android:dateTextAppearance="@style/CalenderViewDateCustomText"
                android:focusedMonthDateColor="@color/white"
                android:fontFamily="@font/comic"
                android:weekDayTextAppearance="@style/CalenderViewWeekCustomText">

            </CalendarView>
        </ScrollView>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>